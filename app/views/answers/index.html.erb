<div id="post-answer">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Ссылка</th>
				<th>Комментарий</th>
				<th>Студент</th>
				<th>Ревижн коммент</th>
				<th>Статус</th>
			</tr>
		</thead>
		<tbody>
			<% @answers.each do |answer| %>
				<tr>
					<td><%= answer.link %></td>
					<td><%= answer.comment %></td>
					<td><%= answer.user.name + ' ' + answer.user.email %></td>
					<td><%= raw(answer.correction_comment) %></td>
					<td>
						<%= answer.status %>
						<%= link_to 'Изменить ответ', edit_answer_path(answer), remote: true, class: 'btn btn-success new-answer btn-xs' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>