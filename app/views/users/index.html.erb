<table class="table table-hover posts">
	<thead>
		<tr>
			<th>id</th>
			<th>Имя</th>
            <th>Email</th>
            <th>Зарегистрирован</th>
			<th>
				<div class="pull-right">Действия</div>
			</th>
		</tr>
	</thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime('%d.%m.%Y в %H:%M') %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>