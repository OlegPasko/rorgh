<!DOCTYPE html>
<html>
<head>
  <title>RoR GeekHub</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'RoR GeekHub', '/', class: 'navbar-brand'%>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
    		<% if current_user %>
				<li><%= link_to current_user.email, root_url %></li>
				<li><%= link_to "Выйти", logout_path %></li>
			<% else %>
				<li><%= link_to "Регистрация", registration_path %></li>
				<li><%= link_to "Вход", login_path %></li>
			<% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
  <div class="container">
	  <div class="col-md-12">
	    <%= bootstrap_flash %>
		<%= yield %>
	  </div>
  </div>
<%= render :partial => '/layouts/metrika' if Rails.env.production? %>

</body>
</html>
